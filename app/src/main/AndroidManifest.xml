<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dicoding.practice.submission2">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/github_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/github_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.Submission1">
        <activity android:name="com.dicoding.practice.submission2.view.SplashScreen"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.SplashScreen"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.dicoding.practice.submission2.view.UserDetailActivity" />
        <activity android:name="com.dicoding.practice.submission2.view.MainActivity"/>
    </application>

</manifest>